<?php $_item = $this->getItem() ?>
<tr class="border">
    <td><?php echo $this->getColumnHtml($_item, 'name') ?>
    	<!-- Code to display Magik Fee starts here -->	
        <?php 
	$Mfee=0;
	$farr=unserialize($_item->getPaymentFee());
	   foreach($farr as $fkey=>$fval) {
	    $Mfee+=$fval[0];
	}  
	if ($Mfee!=0) : 	
	?>
        <dl class="item-options">
	       <?php if(Mage::getStoreConfig('magikfees_section/magikfees_group1/title')!='') : ?> 	
               <dt><?php echo Mage::getStoreConfig('magikfees_section/magikfees_group1/title');?></dt>
	       <?php endif; ?>	
               <dd><?php if ($Mfee!=''): ?>
		<?php echo implode("<br/>",array_values(array_filter(unserialize($_item->getPaymentStr()))))?>
		<?php endif; ?>
	       </dd>
        </dl>
        <?php endif; ?>
	<!-- Code to display Magik Fee ends here -->
    </td>
    <td class="a-center last"><?php echo $_item->getQty()*1 ?></td>
</tr>
